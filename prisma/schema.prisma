// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
    provider             = "mysql"
    url                  = env("DATABASE_URL")
    referentialIntegrity = "prisma"
}

generator js {
    provider        = "prisma-client-js"
    previewFeatures = ["referentialIntegrity", "interactiveTransactions"]
}

model Organization {
    id      Int      @id @default(autoincrement())
    name    String
    wallets Wallet[]
    roles   Role[]
    users   User[]
}

model Role {
    id                  Int           @id @default(autoincrement())
    type                String
    sensitivityLevel    Int
    organization        Organization  @relation(fields: [organizationId], references: [id])
    organizationId      Int
    users               User[]
    grantedWallets      Wallet[]
    blockedTransactions Transaction[]
}

model User {
    id                   Int            @id @default(autoincrement())
    email                String
    firstName            String
    lastName             String
    passwordHash         String
    organizations        Organization[]
    reviewedTransactions Transaction[]  @relation("ReviewedTransactions")
    createdTransactions  Transaction[]  @relation("CreatedTransactions")
    roles                Role[]
}

model Wallet {
    id             Int           @id @default(autoincrement())
    name           String
    balance        Decimal
    organization   Organization  @relation(fields: [organizationId], references: [id])
    organizationId Int
    transactions   Transaction[]
    grantedFor     Role[]
}

model Transaction {
    id               Int      @id @default(autoincrement())
    wallet           Wallet   @relation(fields: [walletId], references: [id])
    walletId         Int
    entryDateTime    DateTime
    spendDateTime    DateTime
    sensitivity      Int
    creator          User     @relation("CreatedTransactions", fields: [creatorId], references: [id])
    creatorId        Int
    reviewer         User?    @relation("ReviewedTransactions", fields: [reviewerId], references: [id])
    reviewerId       Int?
    transactionValue Decimal
    blockedFor       Role[]
}

model CasbinRule {
    id    Int     @id @default(autoincrement())
    ptype String
    v0    String?
    v1    String?
    v2    String?
    v3    String?
    v4    String?
    v5    String?

    @@map("casbin_rule")
}
